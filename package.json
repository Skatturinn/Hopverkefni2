{
	"name": "eslint",
	"version": "1.0.0",
	"description": "Hopverkefni2",
	"main": ".eslintrc.js",
	"scripts": {
		"dev": "browser-sync start --server --files ./src/ styles.css index.html",
		"lint": "stylelint ./**.css & eslint ./**.js",
		"prettier": "prettier --write .",
		"copy:html": "cpy ./*.html ./build/",
		"copy:jslib": "cpy ./lib/*.js ./build/",
		"copy:css": "cpy ./*.css ./build/",
		"copy:icon": "cpy ./image/*.ico ./build/",
		"build": "concurrently npm:copy:*"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"browser-sync": "^2.29.3",
		"concurrently": "^8.2.2",
		"cpy-cli": "^5.0.0",
		"eslint": "^8.54.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-import": "^2.29.0",
		"stylelint": "^15.11.0",
		"stylelint-config-sass-guidelines": "^10.0.0",
		"stylelint-config-standard": "^34.0.0"
	}
}